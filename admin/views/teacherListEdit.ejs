<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>教师详情编辑</title>
    <!-- Bootstrap -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/video.css" rel="stylesheet">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="http://cdn.bootcss.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="http://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<iframe src="/users/navigation" style="width:100vw;height:145px;z-index: 100" frameborder="0" scrolling="no"></iframe>

<div class="main">
    <div class="container">
        <div class="bs-example">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">
                    <h3 class="panel-title">教师详情编辑</h3>
                </div>
                <div class="panel-body">
                    <div class="container">
                        <div class="form-horizontal" role="form">
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="teacherid">申请时间</label>
                                <div class="col-md-6" id="name">
                                    <input type="int" id="teacherCreateTime" value="" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="teacherid">通过时间</label>
                                <div class="col-md-6" id="name">
                                    <input type="datetime" id="teacherRegisterDate" value="" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="teacherid">老师姓名</label>
                                <div class="col-md-6" id="name">
                                    <input type="text" id="teacherName" value="" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="time">年龄</label>
                                <div class="col-md-6" id="name">
                                    <input type="text" id="teacherAge" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="time">教育经历</label>
                                <div class="col-md-6" id="name">
                                    <input type="text" id="teacherSchool" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="time">擅长科目</label>
                                <div class="col-md-6" id="name">
                                    <input type="text" id="teacherGoodCourse" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="name">简介</label>
                                <div class="col-md-6" id="name">
                                    <textarea id="teacherSelfIntroduction" rows="3" name="content" class="form-control"></textarea>
                                </div>
                            </div>

                        </div>
                        <p style="margin:0;text-align:center;padding-top:50px;" id="hint"></p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function teacherListEdit() {
        var teacherId="<%=teacherId%>";
        var teacherCreateTime=$("#teacherCreateTime").val();
        var teacherRegisterDate=$("#teacherRegisterDate").val();
        var teacherName=$("#teacherName").val();
        var teacherAge=$("#teacherAge").val();
        var teacherSchool=$("#teacherSchool").val();
        var teacherGoodCourse=$("#teacherGoodCourse").val();
        var teacherSelfIntroduction=$("#teacherSelfIntroduction").val();
        var data={
            teacherId:teacherId,
            teacherCreateTime:teacherCreateTime,
            teacherRegisterDate:teacherRegisterDate,
            teacherName:teacherName,
            teacherAge:teacherAge,
            teacherSchool:teacherSchool,
            teacherGoodCourse:teacherGoodCourse,
            teacherSelfIntroduction:teacherSelfIntroduction,
        }
        console.log("data:"+JSON.stringify(data));
        if(teacherId.length==0){$("#hint").text("老师ID不能为空");}
        else if(teacherCreateTime.length==0){$("#hint").text("申请时间不能为空");}
        else if(teacherRegisterDate.length==0){$("#hint").text("通过时间不能为空");}
        else if(teacherName.length==0){$("#hint").text("老师姓名不能为空");}
        else if(teacherAge.length==0){$("#hint").text("年龄不能为空");}
        else if(teacherSchool.length==0){$("#hint").text("教育经历不能为空");}
        else if(teacherGoodCourse.length==0){$("#hint").text("擅长科目不能为空");}
        else if(teacherSelfIntroduction.length==0){$("#hint").text("简介");}
        else{
            $.post("teacherListEdit",data,function (data) {
                if (data.status) {
                    $("#hint").text(data.desc);
                    window.open("teacherlist");
                }
                else
                    $("#hint").text(data.desc);
            })
        }
    }
</script>


<div class="main">
    <div class="container">
        <div class="bs-example">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">
                    <h3 class="panel-title">已有课程</h3>
                </div>
                <!-- Table -->
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>编号</th>
                            <th>老师</th>
                            <th>名称</th>
                            <th>时长</th>
                            <th>面向对象</th>
                            <th>课程内容</th>
                            <th>参与人数</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        <%list1.forEach(function (item1){ %>
                        <tr>
                            <td><%=item1.courseId%></td>
                            <td><%=item1.teacherName%></td>
                            <td><%=item1.courseName%></td>
                            <td><%=item1.courseTime%></td>
                            <td><%=item1.objectOriented%></td>
                            <td><%=item1.courseContent%></td>
                            <td><%=item1.courseCount%>人</td>
                            <td>
                                <a class="btn btn-success" href="courseDetailsedit?courseId=<%=item1.courseId%>">编辑</a>
                                <a class="btn btn-primary" href="courseDetails?courseId=<%=item1.courseId%>">查看详情</a>
                            </td>
                        </tr>
                        <%})%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="main">
    <div class="container">
        <div class="bs-example">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">
                    <h3 class="panel-title">已有视频</h3>
                </div>
                <!-- Table -->
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>编号</th>
                            <th>老师</th>
                            <th>名称</th>
                            <th>时长</th>
                            <th>观看人数</th>
                            <th>上传时间</th>
                            <th>标签</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        <%list2.forEach(function (item2){ %>
                        <tr>
                            <td><%=item2.videoId%></td>
                            <td><%=item2.teacherName%></td>
                            <td><%=item2.videoName%></td>
                            <td><%=item2.videoTime%></td>
                            <td><%=item2.videoWatchCount%></td>
                            <td><%=item2.videoCreateTime%></td>
                            <td><%=item2.videoTagName%></td>
                            <td>
                                <a class="btn btn-success" href="videoDetailsEdit?videoId=<%=item2.videoId%>">编辑</a>
                                <a class="btn btn-primary" href="videoDetails?videoId=<%=item2.videoId%>">查看详情</a>
                            </td>
                        </tr>
                        <%})%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<center>
    <button class="btn btn-default " onclick="teacherListEdit()">确定修改</button>
</center>

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="/javascripts/jquery.js"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="/javascripts/bootstrap.min.js"></script>
</body>
</html>