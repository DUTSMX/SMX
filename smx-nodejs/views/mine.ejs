<!DOCTYPE html>
<html>
<head>
    <title>尚名校</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta http-equiv="cache-control" content="no-cache"/>
    <link rel="stylesheet" type="text/css"
          href="http://apps.bdimg.com/libs/jquerymobile/1.4.5/jquery.mobile-1.4.5.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/smxtheme.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/mine.css">
    <script src="http://apps.bdimg.com/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="http://apps.bdimg.com/libs/jquerymobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
</head>
<body>
<div data-role="page" data-title="尚名校">
    <div data-role="header" data-theme="g" data-position="fixed">
        <h3>我的</h3>
    </div>
    <div data-role="content" class="content">
        <ul data-role="listview">
            <li data-icon="false">
                <a href="personDetail" data-ajax="false">
                    <img src="<%= userHeadUrl %>" class="set-people">
                    <h1><%= userName %></h1>
                    <% if(gender == 1){ %>
                    <img class="gender" src="http://smxbucket-10068625.cos.myqcloud.com/resource/icon_gender_man.png">
                    <% }else if(gender == 2){ %>
                    <img class="gender" src="http://smxbucket-10068625.cos.myqcloud.com/resource/icon_gender_women.png">
                    <% } %>
                </a>
            </li>
        </ul>
        <% if(role == 2){ %>
        <ul data-role="listview" class="ui-listview-func">
            <li data-icon="false">
                <a onclick="statusSwitch()" data-ajax="false">
                    <img src="http://smxbucket-10068625.cos.myqcloud.com/resource/tab_question.png" class="ui-li-icon">
                    <p class="question_status">问答状态</p>
                    <p class="switch_status" id="question_status">
                        <% if(status){ %>
                        状态：开
                        <% }else{ %>
                        状态：关
                        <% } %>
                    </p>
                </a>
            </li>
        </ul>
        <ul data-role="listview" class="ui-listview-func">
            <li data-icon="false">
                <a href="createCourse" data-ajax="false">
                    <img src="http://smxbucket-10068625.cos.myqcloud.com/resource/icon_new_course.png" class="ui-li-icon">
                    <p>新建课程</p>
                </a>
            </li>
        </ul>
        <% }else if(role == 1){ %>
        <ul data-role="listview" class="ui-listview-func">
            <li data-icon="false">
                <a href="registerTeacher" data-ajax="false">
                    <img src="http://smxbucket-10068625.cos.myqcloud.com/resource/icon_new_course.png" class="ui-li-icon">
                    <p>申请中...</p>
                </a>
            </li>
        </ul>
        <% }else{ %>
        <ul data-role="listview" class="ui-listview-func">
            <li data-icon="false">
                <a href="registerTeacher" data-ajax="false">
                    <img src="http://smxbucket-10068625.cos.myqcloud.com/resource/icon_new_course.png" class="ui-li-icon">
                    <p>申请家教</p>
                </a>
            </li>
        </ul>
        <% } %>
        <ul data-role="listview" class="ui-listview-func">
            <li data-icon="false" class="my_course">
                <a href="myCourse" data-ajax="false">
                    <img src="http://smxbucket-10068625.cos.myqcloud.com/resource/icon_my_course.png" class="ui-li-icon">
                    <p>我的课程</p>
                </a>
            </li>
            <li data-icon="false">
                <a href="myQuestion" data-ajax="false">
                    <img src="http://smxbucket-10068625.cos.myqcloud.com/resource/icon_my_question.png" class="ui-li-icon">
                    <p>我的提问</p>
                </a>
            </li>
        </ul>
        <ul data-role="listview" class="ui-listview-func">
            <li data-icon="false">
                <a href="setCenter" data-ajax="false">
                    <img src="http://smxbucket-10068625.cos.myqcloud.com/resource/icon_set.png" class="ui-li-icon">
                    <p>设置中心</p>
                </a>
            </li>
        </ul>
    </div>
    <a onclick="logout()" data-ajax="false">
        <button class="logout">退出登录</button>
    </a>
    <div data-role="footer" data-position="fixed" data-theme="t">
        <div data-role="navbar">
            <ul>
                <li><a onclick="course()" data-ajax="false"><img src="http://smxbucket-10068625.cos.myqcloud.com/resource/tab_course.png">
                        <p>课程</p></a></li>
                <li><a onclick="video()" data-ajax="false"><img src="http://smxbucket-10068625.cos.myqcloud.com/resource/tab_video.png">
                        <p>视频</p></a></li>
                <li><a onclick="question()" data-ajax="false"><img src="http://smxbucket-10068625.cos.myqcloud.com/resource/tab_question.png">
                        <p>答疑</p></a></li>
                <li><a href="#" data-ajax="false"><img src="http://smxbucket-10068625.cos.myqcloud.com/resource/tab_mine.png">
                        <p>我的</p></a></li>
            </ul>
        </div>
    </div>
</div>
</body>
<script src="http://apps.bdimg.com/libs/jquery.cookie/1.4.1/jquery.cookie.js"></script>
<script>
    console.log("mine:"+$.cookie("mine"));
    if($.cookie("mine") == "true"){
        location.reload();
        $.cookie("mine",false);
    }
    function logout() {
        location.replace("logout")
    }
    function course() {
        location.replace("/course/course")
    }
    function video() {
        location.replace("/video/video")
    }
    function question() {
        location.replace("/question/question")
    }
    function statusSwitch() {
        var status = "<%= status %>"
        console.log("status:" + status + " status" + typeof status)
        if (status == 1) {
            status = 0;
            $("#question_status").text("状态：关");
            var data = {status: status};
            $.post("/users/questionStatus", data, function (data) {
                if (data.status) {
                    $("#question_status").text(data.desc)
                } else {
                    console.log(data.desc)
                }
            }, "json")
        } else {
            status = 1;
            $("#question_status").text("状态：开");
            var data = {status: status};
            $.post("/users/questionStatus", data, function (data) {
                if (data.status) {
                    $("#question_status").text(data.desc)
                } else {
                    console.log(data.desc)
                }
            }, "json")
        }
    }
</script>
</html>