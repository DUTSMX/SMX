<!DOCTYPE html>
<html>
<head>
    <title>尚名校</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="cache-control" content="no-cache"/>
    <link rel="stylesheet" type="text/css" href="http://apps.bdimg.com/libs/jquerymobile/1.4.5/jquery.mobile-1.4.5.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/smxtheme.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/slick.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/slick-theme.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/course.css">
    <script src="http://apps.bdimg.com/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="http://apps.bdimg.com/libs/jquerymobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
    <script src="/javascripts/slick.min.js"></script>
</head>
<body>
<div data-role="page" data-title="尚名校">
    <div data-role="header" data-theme="g" data-position="fixed">
        <img src="http://smxbucket-10068625.cos.myqcloud.com/resource/ic_search.png" onclick="location.href='../search'" class="search"/>
        <h3>课程</h3>
    </div>
    <div class="ad_Images">
        <%courseList.rotation.forEach(function(item){%>
            <div class="ad_Image_style">
                <img src="<%=item.adImageUrl%>">
            </div>
        <%})%>
    </div>
    <div data-role="content">
        <div class="myclass">
            <h4><img src="http://smxbucket-10068625.cos.myqcloud.com/resource/type_icon_green.png">&nbsp我的课程</h4>
            <img src="http://smxbucket-10068625.cos.myqcloud.com/resource/line_green.png" class="div_line">
            <div class="details_class">
                <ul data-role="listview">
                    <%if(courseList.myCourse.length == 0){%>
                        <img src="http://smxbucket-10068625.cos.myqcloud.com/resource/my_course_empty.jpg" class="image_place_holder">
                    <%}else{%>
                        <%courseList.myCourse.forEach(function(item){ %>
                        <li data-icon="false">
                            <a href="courseDetail?courseId=<%= item.courseId %>" data-ajax="false">
                                <!-- 放在css就失效-->
                                <div class="my_course_head_div"></div>
                                <img class="head_big" src=<%= item.teacherHeadUrl %>>
                                <div class="class_info">
                                    <div class="class_info_school">
                                        <h5><%= item.teacherName %></h5>
                                        <h6><%= item.teacherSchool %></h6>
                                    </div>
                                    <div class="class_info_name">
                                        <h3><%= item.courseName %></h3>
                                    </div>
                                    <div class="class_info_time">
                                        <h6><img class="clock" src="http://smxbucket-10068625.cos.myqcloud.com/resource/icon_time.png"><%= item.courseTime %></h6>
                                    </div>
                                </div>
                            </a>
                        </li>
                        <% }) %>
                    <%}%>
                </ul>
            </div>
        </div>
        <div class="hotclass">
            <h4><img src="http://smxbucket-10068625.cos.myqcloud.com/resource/type_icon_orange.png">&nbsp热门课程<span><!--<a href="#">更多></a>--></span></h4>
            <img src="http://smxbucket-10068625.cos.myqcloud.com/resource/line_orange.png" class="div_line">
            <div class="details_class">
                <ul data-role="listview">
                    <% courseList.allCourse.forEach(function(item){ %>
                    <li data-icon="false">
                        <a href="courseDetail?courseId=<%= item.courseId %>" data-ajax="false">
                            <!-- 放在css就失效-->
                            <div class="all_course_head_div"></div>
                            <img class="head_big" src=<%= item.teacherHeadUrl %>>  <!-- TODOteacherHeadUrl -->
                            <div class="class_info">
                                <div class="class_info_school">
                                    <h5><%= item.teacherName %></h5>
                                    <h6><%= item.teacherSchool %></h6>
                                </div>
                                <div class="class_info_name">
                                    <h3><%= item.courseName %></h3>
                                </div>
                                <div class="class_info_time">

                                    <h6><img src="http://smxbucket-10068625.cos.myqcloud.com/resource/icon_time.png"><%= item.courseTime %></h6>
                                </div>
                            </div>
                        </a>
                    </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
    <div data-role="footer" data-position="fixed" data-theme="t">
        <div data-role="navbar">
            <ul>
                <li><a href="#" data-ajax="false"><img src="http://smxbucket-10068625.cos.myqcloud.com/resource/tab_course.png">
                        <p>课程</p></a></li>
                <li><a onclick="video()" data-ajax="false"><img src="http://smxbucket-10068625.cos.myqcloud.com/resource/tab_video.png">
                        <p>视频</p></a></li>
                <li><a onclick="question()" data-ajax="false"><img src="http://smxbucket-10068625.cos.myqcloud.com/resource/tab_question.png">
                        <p>答疑</p></a></li>
                <li><a onclick="mine()" data-ajax="false"><img src="http://smxbucket-10068625.cos.myqcloud.com/resource/tab_mine.png">
                        <p>我的</p></a></li>
            </ul>
        </div>
    </div>
</div>

<script src="http://apps.bdimg.com/libs/jquery.cookie/1.4.1/jquery.cookie.js"></script>
<script>
    function video() {
        location.replace("/video/video")
    }
    function question() {
        location.replace("/question/question")
    }
    function mine() {
        location.replace("/users/mine")
    }
    if($.cookie("courseList") == "true"){
        location.reload();
        $.cookie("courseList",false);
    }
//    var flag = true;
//    if(flag){
//        location.reload();
//        flag = false;
//    }
    /*轮播图*/
    $(document).ready(function () {
        $(".ad_Images").slick({
            autoplay: true,
            autoplaySpeed: "4000",
            dots: true
        });
    });
</script>
</body>
</html>