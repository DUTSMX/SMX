<!DOCTYPE html>
<html>
<head>
    <title>尚名校</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="cache-control" content="no-cache"/>
    <link rel="stylesheet" type="text/css" href="http://apps.bdimg.com/libs/jquerymobile/1.4.5/jquery.mobile-1.4.5.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/smxtheme.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/slick.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/slick-theme.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
</head>
<body>
<div data-role="page" data-title="尚名校" id="page-course">
    <div data-role="header" data-theme="g" data-position="fixed">
        <h3>课程</h3>
    </div>
    <div class="ad_Images">
        <div class="ad_Image_style">
            <img src="/images/轮播图.png">
        </div>
        <div class="ad_Image_style">
            <img src="/images/轮播图2.png">
        </div>
        <div class="ad_Image_style">
            <img src="/images/轮播图3.png">
        </div>
    </div>
    <div data-role="content">
        <div class="myclass">
            <h4><img src="/images/myclass.png">&nbsp我的课程</h4>
            <img src="/images/课程分割线.png" class="div_line">
            <div class="details_class">
                <ul data-role="listview">
                    <% courseInfo.courseList.myCourse.forEach(function(item){ %>
                    <li data-icon="false">
                        <a href="./course/courseDetail?courseId=<%= item.courseId %>" data-ajax="false">
                            <!-- 放在css就失效-->
                            <div class="my_course_head_div"></div>
                            <img class="head_big" src=<%= item.teacherHeadUrl %>>
                            <div class="class_info">
                                <div class="class_info_school">
                                    <h5 class="teacher_name"><%= item.teacherName %></h5>
                                    <h6><%= item.teacherSchool %></h6>
                                </div>
                                <div class="class_info_name">
                                    <h3><%= item.courseName %></h3>
                                </div>
                                <div class="class_info_time">
                                    <h6><img class="clock" src="/images/课程时间.png"><%= item.courseTime %></h6>
                                </div>
                            </div>
                        </a>
                    </li>
                    <% }) %>
                </ul>
            </div>
        </div>
        <div class="hotclass">
            <h4><img src="/images/hotclass.png">&nbsp热门课程<span><!--<a href="#">更多></a>--></span></h4>
            <img src="/images/热门课程分割线.png" class="div_line">
            <div class="details_class">
                <ul data-role="listview">
                    <% courseInfo.courseList.allCourse.forEach(function(item){ %>
                    <li data-icon="false">
                        <a href="./course/courseDetail?courseId=<%= item.courseId %>" data-ajax="false">
                            <!-- 放在css就失效-->
                            <div class="all_course_head_div"></div>
                            <img class="head_big" src=<%= item.teacherHeadUrl %>>  <!-- TODOteacherHeadUrl -->
                            <div class="class_info">
                                <div class="class_info_school">
                                    <h5 class="teacher_name"><%= item.teacherName %></h5>
                                    <h6><%= item.teacherSchool %></h6>
                                </div>
                                <div class="class_info_name">
                                    <h3><%= item.courseName %></h3>
                                </div>
                                <div class="class_info_time">

                                    <h6><img src="/images/课程时间.png"><%= item.courseTime %></h6>
                                </div>
                            </div>
                        </a>
                    </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
    <div data-role="footer" data-position="fixed" data-theme="t">
        <div data-role="navbar">
            <ul>
                <li><a href="#page-course" data-ajax="false"><img src="/images/01.png">
                        <p>课程</p></a></li>
                <li><a href="#page-video" data-ajax="false"><img src="/images/02.png">
                        <p>视频</p></a></li>
                <li><a href="#page-question" data-ajax="false"><img src="/images/03.png">
                        <p>答疑</p></a></li>
                <li><a href="#page-mine" data-ajax="false"><img src="/images/04.png">
                        <p>我的</p></a></li>
            </ul>
        </div>
    </div>
</div>
<div data-role="page" data-title="尚名校" id="page-video">
    <div data-role="header" data-theme="g" data-position="fixed">
        <h3>视频</h3>
    </div>
    <div data-role="content">
        <div class="hotvideos">
            <h4><img src="/images/myclass.png">&nbsp热门视频<!--<span><a href="#">更多></a></span>--></h4>
            <img src="/images/课程分割线.png" class="div_line">
            <div class="details_videos">
                <ul data-role="listview">
                    <%videoInfo.forEach(function(item){%>
                    <li data-icon="false">
                        <a href="./video/videoDetail?videoId=<%=item.videoId%>"  data-ajax="false">
                            <img src="<%=item.videoCoverUrl%>" class="video_show">
                            <div class="videos_info">
                                <div class="videos_name">
                                    <h3><%=item.videoName%></h3>
                                </div>
                                <div class="videos_time">
                                    <h5><%=item.videoTime%> | <span><%=item.videoWatchCount%></span>人观看</h5>
                                </div>
                                <!--<div class="videos_classify">-->
                                <!--<ul>-->
                                <!--<li>高中</li>-->
                                <!--<li>数学</li>-->
                                <!--<li>理科</li>-->
                                <!--</ul>-->
                                <!--</div>-->
                            </div>
                        </a>
                    </li>
                    <%})%>
                </ul>
            </div>
        </div>
        <div data-role="footer" data-position="fixed" data-theme="t">
            <div data-role="navbar">
                <ul>
                    <li><a href="#page-course" data-ajax="false"><img src="/images/01.png">
                            <p>课程</p></a></li>
                    <li><a href="#page-video" data-ajax="false"><img src="/images/02.png">
                            <p>视频</p></a></li>
                    <li><a href="#page-question" data-ajax="false"><img src="/images/03.png">
                            <p>答疑</p></a></li>
                    <li><a href="#page-mine" data-ajax="false"><img src="/images/04.png">
                            <p>我的</p></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div data-role="page" data-title="尚名校" id="page-question">
    <div data-role="header" data-theme="g" data-position="fixed">
        <h3>问答</h3>
    </div>
    <div data-role="content">
        <div class="online_teacher">
            <h4><img src="/images/myclass.png">&nbsp在线老师<span><a href="#"></a></span></h4>
            <img src="/images/课程分割线.png" class="div_line">
        </div>
        <div class="teacher_tab">
            <div class="ui-grid-d">
                <%questionInfo.teacherList.forEach(function (item) {%>
                <div class="ui-block-b">
                    <a href="./question/askQuestion" data-ajax="false">
                        <img src="<%=item.headUrl%>">
                    </a>
                    <p><%=item.userName%></p>
                </div>
                <%})%>
            </div>
        </div>
        <div class="online_teacher">
            <h4><img src="/images/myclass.png">&nbsp热门问答<!--<span><a href="#">更多></a></span>--></h4>
            <img src="/images/课程分割线.png" class="div_line">
        </div>
        <div class="answer_area">
            <ul data-role="listview">
                <%questionInfo.questionList.forEach(function(item){%>
                <li data-icon="false">
                    <a href="./question/<%=item.aHref%>"  data-ajax="false">
                        <span class="ans_teacher"><img class="head_small" src="<%=item.authorHeadUrl%>"><%=item.authorName%></span>
                        <!--<div class="zan">
                            <p>12</p>
                            <span>赞同</span>
                        </div>-->
                        <h5><%=item.questionTitle%></h5>
                        <p><%=item.answerAbstract%></p>
                    </a>
                </li>
                <%})%>
            </ul>
        </div>
    </div>
    <div data-role="footer" data-position="fixed" data-theme="t">
        <div data-role="navbar">
            <ul>
                <li><a href="#page-course" data-ajax="false"><img src="/images/01.png">
                        <p>课程</p></a></li>
                <li><a href="#page-video" data-ajax="false"><img src="/images/02.png">
                        <p>视频</p></a></li>
                <li><a href="#page-question" data-ajax="false"><img src="/images/03.png">
                        <p>答疑</p></a></li>
                <li><a href="#page-mine" data-ajax="false"><img src="/images/04.png">
                        <p>我的</p></a></li>
            </ul>
        </div>
    </div>
    <a href="./question/askQuestion"data-ajax="false"><img class="ask_question" src="/images/ask_question.png" style="width:50px;height:50px"/></a>
</div>
<div data-role="page" data-title="尚名校" id="page-mine">
    <div data-role="header" data-theme="g" data-position="fixed">
        <h3>我的</h3>
    </div>
    <div data-role="content" class="content">
        <ul data-role="listview">
            <li data-icon="false">
                <a href="./users/personDetail" data-ajax="false">
                    <img src="<%=mineInfo.userHeadUrl%>" class="set-people">
                    <h1><%=mineInfo.userName%></h1>
                    <%if(mineInfo.gender == 1){%>
                    <img class="gender"src="/images/man.png">
                    <%}else if(mineInfo.gender == 2){%>
                    <img class="gender"src="/images/women.png">
                    <%}%>
                </a>
            </li>
        </ul>
        <%if(mineInfo.role == 2){%>
        <ul data-role="listview" class="ui-listview-func">
            <li data-icon="false">
                <a onclick="statusSwitch()"  data-ajax="false">
                    <img src="/images/03.png" class="ui-li-icon">
                    <p class="question_status">问答状态</p>
                    <p class="switch_status"id="question_status"><% if(mineInfo.status){%>状态：开<%}else{%>状态：关<%}%></p>
                </a>
            </li>
        </ul>
        <ul data-role="listview" class="ui-listview-func">
            <li data-icon="false">
                <a href="./users/createCourse"  data-ajax="false">
                    <img src="/images/新建课程.png" class="ui-li-icon">
                    <p>新建课程</p>
                </a>
            </li>
        </ul>
        <%}else if(mineInfo.role == 1){%>
        <ul data-role="listview" class="ui-listview-func">
            <li data-icon="false">
                <a href="./users/registerTeacher"  data-ajax="false">
                    <img src="/images/新建课程.png" class="ui-li-icon">
                    <p>申请中...</p>
                </a>
            </li>
        </ul>
        <%}else{%>
        <ul data-role="listview" class="ui-listview-func">
            <li data-icon="false">
                <a href="./users/registerTeacher"  data-ajax="false">
                    <img src="/images/新建课程.png" class="ui-li-icon">
                    <p>申请家教</p>
                </a>
            </li>
        </ul>
        <%}%>
        <ul data-role="listview" class="ui-listview-func">
            <li data-icon="false" class="my_course">
                <a href="./users/myCourse"  data-ajax="false">
                    <img src="/images/我的课程.png" class="ui-li-icon">
                    <p>我的课程</p>
                </a>
            </li>
            <li data-icon="false">
                <a href="./users/myQuestion"  data-ajax="false">
                    <img src="/images/我的提问.png" class="ui-li-icon">
                    <p>我的提问</p>
                </a>
            </li>
        </ul>
        <ul data-role="listview" class="ui-listview-func">
            <li data-icon="false">
                <a href="./users/setCenter"  data-ajax="false">
                    <img src="/images/设置中心.png" class="ui-li-icon">
                    <p>设置中心</p>
                </a>
            </li>
        </ul>
    </div>
    <a href="./users/logout" data-ajax="false"><button class="logout">退出登录</button></a>
    <div data-role="footer" data-position="fixed" data-theme="t">
        <div data-role="navbar">
            <ul>
                <li><a href="#page-course" data-ajax="false"><img src="/images/01.png">
                        <p>课程</p></a></li>
                <li><a href="#page-video" data-ajax="false"><img src="/images/02.png">
                        <p>视频</p></a></li>
                <li><a href="#page-question" data-ajax="false"><img src="/images/03.png">
                        <p>答疑</p></a></li>
                <li><a href="#page-mine" data-ajax="false"><img src="/images/04.png">
                        <p>我的</p></a></li>
            </ul>
        </div>
    </div>
</div>
<script src="http://apps.bdimg.com/libs/jquery/1.10.2/jquery.min.js"></script>
<script src="http://apps.bdimg.com/libs/jquerymobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
<script src="/javascripts/slick.min.js"></script>
<script>
    /*轮播图*/
    $(document).ready(function () {
        $(".ad_Images").slick({
            autoplay: true,
            autoplaySpeed: "4000",
            dots: true
        });
    });
    function statusSwitch() {
        var status = "<%= mineInfo.status %>"
        console.log("status:"+status+" status"+typeof status)
        if (status == 1) {
            status = 0;
            $("#question_status").text("状态：关");
            var data = {status:status};
            $.post("/users/questionStatus", data, function (data) {
                if(data.status){
                    $("#question_status").text(data.desc)
                }else{
                    console.log(data.desc)
                }
            }, "json")
        } else {
            status = 1;
            $("#question_status").text("状态：开");
            var data = {status:status};
            $.post("/users/questionStatus", data, function (data) {
                if(data.status){
                    $("#question_status").text(data.desc)
                }else{
                    console.log(data.desc)
                }
            }, "json")
        }
    }
</script>
</body>
</html>