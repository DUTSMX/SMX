.container{
    padding:40rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.current{
    margin-top:20rpx;
    width:100%;
    flex-direction: row;
}
.button_view{
    margin-top:20rpx;
    display:flex;
    width:100%;
    flex-direction: row;
    justify-content: space-between
}
.button{
    width:30%;
}