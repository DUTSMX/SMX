<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>尚名校</title>
    <!-- Bootstrap -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link href="/stylesheets/admin.css" rel="stylesheet" type="text/css"/>
    <link href="/stylesheets/scroll-table.css" rel="stylesheet" type="text/css"/>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="http://cdn.bootcss.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="http://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>
        .course-block{height:60px;border-radius: 5px;border-style:solid;border-width:1px;border-color:#4cae4c;margin-bottom:10px;margin-top:10px}
        .sign-up{margin-top:10px;margin-right:10px}
        .margin-left-10{margin-left:10px}
    </style>
</head>
<body>
<%include navigation-index.ejs%>
<%include navigation-admin.ejs%>
<div class="right-content">
    <div class="bs-example">
        <div class="panel-heading title-block">
            <h3 class="panel-title inline title-white">用户列表</h3>
            <h3 class="panel-title right-button" onclick="addStudent()">添加用户</h3>
        </div>
        <div>
            <div class="course-block">
                <h3 class="inline left course-title margin-left-10">刘一</h3>
                <button class="btn btn-default left sign-up margin-left-10">学生</button>
                <button class="btn btn-success right sign-up" onclick="courseDetail()">编辑</button>
                <button class="btn btn-success right sign-up" onclick="authorization()">授权</button>
            </div>
            <div class="course-block">
                <h3 class="inline left course-title margin-left-10">陈二</h3>
                <button class="btn btn-default left sign-up margin-left-10">学生</button>
                <button class="btn btn-success right sign-up" onclick="courseDetail()">编辑</button>
                <button class="btn btn-success right sign-up" onclick="authorization()">授权</button>
            </div>
            <div class="course-block">
                <h3 class="inline left course-title margin-left-10">张三</h3>
                <button class="btn btn-default left sign-up margin-left-10">老师</button>
                <button class="btn btn-success right sign-up" onclick="courseDetail()">编辑</button>
                <button class="btn btn-success right sign-up" onclick="authorization()">授权</button>
            </div>
            <div class="course-block">
                <h3 class="inline left course-title margin-left-10">李四</h3>
                <button class="btn btn-default left sign-up margin-left-10">学生</button>
                <button class="btn btn-success right sign-up" onclick="courseDetail()">编辑</button>
                <button class="btn btn-success right sign-up" onclick="authorization()">授权</button>
            </div>
            <div class="course-block">
                <h3 class="inline left course-title margin-left-10">王五</h3>
                <button class="btn btn-default left sign-up margin-left-10">加盟店长</button>
                <button class="btn btn-success right sign-up" onclick="courseDetail()">编辑</button>
                <button class="btn btn-success right sign-up" onclick="authorization()">授权</button>
            </div>
            <div class="course-block">
                <h3 class="inline left course-title margin-left-10">赵六</h3>
                <button class="btn btn-default left sign-up margin-left-10">学生</button>
                <button class="btn btn-success right sign-up" onclick="courseDetail()">编辑</button>
                <button class="btn btn-success right sign-up" onclick="authorization()">授权</button>
            </div>
            <div class="course-block">
                <h3 class="inline left course-title margin-left-10">孙七</h3>
                <button class="btn btn-default left sign-up margin-left-10">加盟店前台</button>
                <button class="btn btn-success right sign-up" onclick="courseDetail()">编辑</button>
                <button class="btn btn-success right sign-up" onclick="authorization()">授权</button>
            </div>
            <div class="course-block">
                <h3 class="inline left course-title margin-left-10">周八</h3>
                <button class="btn btn-default left sign-up margin-left-10">管理员</button>
                <button class="btn btn-success right sign-up" onclick="courseDetail()">编辑</button>
                <button class="btn btn-success right sign-up" onclick="authorization()">授权</button>
            </div>
            <div class="course-block">
                <h3 class="inline left course-title margin-left-10">吴九</h3>
                <button class="btn btn-default left sign-up margin-left-10">总公司高管</button>
                <button class="btn btn-success right sign-up" onclick="courseDetail()">编辑</button>
                <button class="btn btn-success right sign-up" onclick="authorization()">授权</button>
            </div>
            <div class="course-block">
                <h3 class="inline left course-title margin-left-10">郑十</h3>
                <button class="btn btn-default left sign-up margin-left-10">教务</button>
                <button class="btn btn-success right sign-up" onclick="courseDetail()">编辑</button>
                <button class="btn btn-success right sign-up" onclick="authorization()">授权</button>
            </div>
        </div>
    </div>
</div>
<div id="fade" class="black-overlay"></div>
<div id="light" class="white-content">
    <div class="dialog" id="addStudent">
        <div class="dialog-title"><span class="font-20 title-white">添加学生</span><span class="right title-white" onclick="closeDialog()">X</span></div>
        <input class="dialog-input" placeholder="请输入学生姓名"/>
        <input class="dialog-input" placeholder="请输入手机号码"/>
        <input class="dialog-input" placeholder="请输入学校名称"/>
        <input class="dialog-input" placeholder="请输入年级信息"/>
        <button class="btn btn-default dialog-input" onclick="closeDialog()">确认添加</button>
    </div>
    <div class="dialog" id="author">
        <div class="dialog-title"><span class="font-20 title-white">用户授权</span><span class="right title-white" onclick="closeDialog()">X</span></div>
        <button class="dialog-input" onclick="closeDialog()">学生</button>
        <button class="dialog-input" onclick="closeDialog()">老师</button>
        <button class="dialog-input" onclick="closeDialog()">加盟店前台</button>
        <button class="dialog-input" onclick="closeDialog()">加盟店长</button>
        <button class="dialog-input" onclick="closeDialog()">教务</button>
        <button class="dialog-input" onclick="closeDialog()">总公司高管</button>
        <button class="dialog-input" onclick="closeDialog()">管理员</button>
    </div>
</div>
</body>

<script src="http://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js"></script>
<script>

    $("#person").text("管理姓名")
    function loginDialog(){
        location.href = "adminManagerDetail"
    }
    $("#navigation-user").addClass("select-left-button")
    function addStudent(){
        $("#fade").show()
        $("#light").show()
        $("#addStudent").show()
        $("#author").hide()
    }
    function closeDialog(){
        $("#fade").hide()
        $("#light").hide()
        $("#addStudent").hide()
        $("#author").hide()
    }
    function courseDetail(){
        location.href = "adminUserDetail"
    }
    function authorization(){
        $("#fade").show()
        $("#light").show()
        $("#addStudent").hide()
        $("#author").show()
    }
</script>
</html>